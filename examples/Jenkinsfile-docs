    //publishBuildArtifact = true


    /* 
    * extraEnvs - defines a map of parameters to pass implicitly into job ENV variables
    */
    // extraEnvs = ['TEST_DB'        : "postgres://test:dev@localhost/test_analytics${testExecutorNumber}",
